{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "{{ env `AWS_REGION`}}",
    "build_timestamp": "{{timestamp}}",
    "encrypted": "false",
    "kubernetes_version": "1.14.4-00",
    "kubernetes_cni_version": "0.7.5-00",
    "existing_ansible_ssh_args": "{{env `ANSIBLE_SSH_ARGS`}}",
    "ami_groups": "all",
    "ami_users": "",
    "snapshot_groups": "all",
    "snapshot_users": "",
    "ami_regions": "ap-south-1,eu-west-3,eu-west-2,eu-west-1,ap-northeast-2,ap-northeast-1,sa-east-1,ca-central-1,ap-southeast-1,ap-southeast-2,eu-central-1,us-east-1,us-east-2,us-west-1,us-west-2"
  },
  "builders": [{
      "name": "ubuntu-1804",
      "type": "amazon-ebs",
      "instance_type": "t2.small",
      "source_ami": "{{user `ubuntu_18_04_ami`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs",
          "architecture": "x86_64"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "ami_name": "capa-ami-ubuntu-18.04-{{user `kubernetes_version`}}-{{user `build_timestamp`}}",
      "ami_groups": "{{user `ami_groups`}}",
      "ami_users": "{{user `ami_users`}}",
      "snapshot_groups": "{{user `snapshot_groups`}}",
      "snapshot_users": "{{user `snapshot_users`}}",
      "encrypt_boot": "{{user `encrypted`}}",
      "ami_regions": "{{user `ami_regions`}}",
      "access_key": "{{user `aws_access_key`}}",
      "region": "{{ user `aws_region` }}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_username": "ubuntu",
      "tags": {
        "build_timestamp": "{{user `build_timestamp`}}",
        "source_ami": "{{user `ubuntu_18_04_ami`}}",
        "build_date": "{{isotime}}",
        "distribution": "Ubuntu",
        "distribution_release": "bionic",
        "distribution_version": "18.04",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    },
    {
      "name": "centos-7",
      "type": "amazon-ebs",
      "instance_type": "t2.small",
      "source_ami": "{{user `centos_7_ami`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "CentOS Linux 7 x86_64 HVM EBS ENA*",
          "root-device-type": "ebs",
          "architecture": "x86_64"
        },
        "owners": ["410186602215"],
        "most_recent": true
      },
      "ami_name": "capa-ami-centos-7-{{user `kubernetes_version`}}-{{user `build_timestamp`}}",
      "ami_groups": "{{user `ami_groups`}}",
      "ami_users": "{{user `ami_users`}}",
      "snapshot_groups": "{{user `snapshot_groups`}}",
      "snapshot_users": "{{user `snapshot_users`}}",
      "encrypt_boot": "{{user `encrypted`}}",
      "ami_product_codes": "",
      "ami_regions": "{{user `ami_regions`}}",
      "access_key": "{{user `aws_access_key`}}",
      "region": "{{ user `aws_region` }}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_username": "centos",
      "tags": {
        "build_timestamp": "{{user `build_timestamp`}}",
        "source_ami": "{{user `centos_7_ami`}}",
        "build_date": "{{isotime}}",
        "distribution": "CentOS",
        "distribution_release": "Core",
        "distribution_version": "7",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    },
    {
      "name": "amazon-2",
      "type": "amazon-ebs",
      "instance_type": "t2.small",
      "source_ami": "{{user `amazon_2_ami`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn2-ami-hvm-2*",
          "root-device-type": "ebs",
          "architecture": "x86_64"
        },
        "owners": ["amazon"],
        "most_recent": true
      },
      "ami_name": "capa-ami-amazon-2-{{user `kubernetes_version`}}-{{user `build_timestamp`}}",
      "ami_groups": "{{user `ami_groups`}}",
      "ami_users": "{{user `ami_users`}}",
      "snapshot_groups": "{{user `snapshot_groups`}}",
      "snapshot_users": "{{user `snapshot_users`}}",
      "encrypt_boot": "{{user `encrypted`}}",
      "ami_regions": "{{user `ami_regions`}}",
      "access_key": "{{user `aws_access_key`}}",
      "region": "{{ user `aws_region` }}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_username": "ec2-user",
      "tags": {
        "build_timestamp": "{{user `build_timestamp`}}",
        "source_ami": "{{user `amazon_2_ami`}}",
        "build_date": "{{isotime}}",
        "distribution": "Amazon Linux",
        "distribution_release": "Amazon Linux 2",
        "distribution_version": "2",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    }
  ],
  "provisioners": [{
      "type": "shell",
      "inline": [
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done",
        "sudo apt-get -qq update && sudo DEBIAN_FRONTEND=noninteractive apt-get -qqy install python python-pip"
      ],
      "only": [
        "ubuntu-1804"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "../ansible/playbook.yml",
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='{{user `existing_ansible_ssh_args`}} -o IdentitiesOnly=yes'",
        "ANSIBLE_REMOTE_TEMP='/tmp/.ansible/'"
      ],
      "extra_arguments": [
        "--extra-vars",
        "kubernetes_version={{user `kubernetes_version`}} kubernetes_cni_version={{user `kubernetes_cni_version`}}"
      ]
    },
    {
      "type": "goss",
      "vars_file": "goss/redhat-vars.yaml",
      "use_sudo": true,
      "tests": [
        "goss/goss.yaml"
      ],
      "only": [
        "amazon-2",
        "centos-7"
      ]
    },
    {
      "type": "goss",
      "vars_file": "goss/ubuntu-vars.yaml",
      "use_sudo": true,
      "tests": [
        "goss/goss.yaml"
      ],
      "only": [
        "ubuntu-1804"
      ]
    }
  ]
}
